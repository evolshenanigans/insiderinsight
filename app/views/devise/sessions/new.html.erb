<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "w-full bg-red-500 text-white" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "w-full bg-red-500 text-white" } %>
    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean, input_html: { class: "bg-red-500" } %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "w-full bg-red-600 text-white py-2 px-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
