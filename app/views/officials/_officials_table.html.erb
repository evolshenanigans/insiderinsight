<div class="overflow-x-auto w-full">
  <table class="w-full mx-auto text-center">
    <caption class="sr-only">List of officials and their party affiliations with details link</caption>
    <thead>
      <tr>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Party Affiliation</th>
        <th class="px-4 py-2 sr-only">Details</th> <!-- sr-only for screen readers -->
      </tr>
    </thead>
    <tbody>
      <% officials.each do |official| %>
        <tr>
          <td class="px-4 py-2">
            <div class="flex gap-3 items-center">
              <div class="mask mask-squircle w-12 h-12">
                <%= image_tag(official.image_url, alt: "#{official.name} Avatar", class: "w-full h-full object-cover") if official.image_url.present? %>
              </div>
              <%= official.name %>
            </div>
          </td>
          <td class="px-4 py-2"><%= official.party_affiliation %></td>
          <td class="px-4 py-2">
            <%= link_to 'Details', official_path(official), class: "btn btn-ghost btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
