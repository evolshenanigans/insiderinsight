<div class="h-full bg-white dark:bg-black w-full max-w-7xl mx-auto p-3 md:p-6">
  <div class="grid grid-cols-3 gap-3">
    <div class="col-span-1 flex flex-col text-black dark:text-white border dark:border-gray-300/30 rounded-3xl p-3 h-52 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-zinc-700 via-black to-black text-center items-center justify-center place-items-center place-content-center [text-wrap:balance] overflow-y-auto">
      <h3 class="text-2xl font-semibold pb-3">Photo goes here</h3>
    </div>
    <div class="col-span-2 flex flex-col text-black dark:text-white border dark:border-gray-300/30 rounded-3xl p-3 h-96 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-zinc-700 via-black to-black text-center items-center justify-center place-items-center place-content-center [text-wrap:balance] overflow-y-auto">
      <%= render 'bios', officials: @officials %>
    </div>
    <div class="col-span-3 flex flex-col text-black dark:text-white border dark:border-gray-300/30 rounded-3xl p-3 h-72 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-zinc-700 via-black to-black text-center items-center justify-center place-items-center place-content-center [text-wrap:balance] overflow-y-auto">
      <%= render 'list', stocks: @stocks %>
    </div>
    <div class="col-span-3 flex flex-col text-black dark:text-white border dark:border-gray-300/30 rounded-xl p-3 h-52 bg-black text-center items-center justify-center place-items-center place-content-center [text-wrap:balance] overflow-y-auto">
      <%= render 'info' %>
    </div>
  </div>
</div>
